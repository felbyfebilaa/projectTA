<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deskripsi_omelet"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/domelet_gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/omelet"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/domelet_txt1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/domelet_gambar1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="OMELET"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/domelet_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_txt1"
            android:layout_marginTop="20dp"
            android:text="DESKRIPSI"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/domelet_text3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_txt2"
            android:text="Omelet roti gandum merupakan hidangan yang kaya protein, serat, dan nutrisi lainnya. Omelet roti gandum ini sering dijadikan sarapan atau camilan sehat."
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/domelet_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text3"
            android:text="RESEP"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/domelet_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text4"
            android:paddingLeft="15dp"
            android:text="- 1 butir telur ayam"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/domelet_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text5"
            android:paddingLeft="15dp"
            android:text="- 1 lembar roti gandum"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/domelet_text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text6"
            android:paddingLeft="15dp"
            android:text="- Garam dan lada secukupnya"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/domelet_text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text7"
            android:paddingLeft="15dp"
            android:text="- Minyak sayur atau mentega untuk menggoreng"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/domelet_text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text8"
            android:paddingLeft="15dp"
            android:text="- Minyak sayur atau mentega untuk menggoreng"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/domelet_text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text13"
            android:layout_marginLeft="250dp"
            android:text="Kalori 260"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/domelet_text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text9"
            android:layout_marginLeft="250dp"
            android:text="Karbohidrat 17.1g"
            />

        <TextView
            android:id="@+id/domelet_text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text10"
            android:layout_marginLeft="250dp"
            android:text="Lemak 16.78g"
            />

        <TextView
            android:id="@+id/domelet_text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/domelet_text11"
            android:layout_marginLeft="250dp"
            android:text="Protein 9.56g"
            />
    </RelativeLayout>

</ScrollView>