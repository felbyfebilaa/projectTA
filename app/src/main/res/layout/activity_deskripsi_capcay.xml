<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deskripsi_capcay"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/dcapcay_gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/capcay"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/dcapcay_txt1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/dcapcay_gambar1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="CAPCAY"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_txt1"
            android:layout_marginTop="20dp"
            android:text="DESKRIPSI"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/dcapcay_text3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_txt2"
            android:text="Capcay adalah hidangan yang kaya akan serat, vitamin, dan protein. Dengan berbagai warna sayuran, capcay memberikan nutrisi penting untuk menjaga kesehatan dan kelezatan yang memanjakan lidah. "
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/dcapcay_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text3"
            android:text="RESEP"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/dcapcay_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text4"
            android:paddingLeft="15dp"
            android:text="- 1 wortel"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text5"
            android:paddingLeft="15dp"
            android:text="- 1 paprika merah"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text6"
            android:paddingLeft="15dp"
            android:text="- 1 paprika hijau"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text7"
            android:paddingLeft="15dp"
            android:text="- 100 gram kembang kol"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text8"
            android:paddingLeft="15dp"
            android:text="- 100 gram brokoli"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text9"
            android:paddingLeft="15dp"
            android:text="- 100 gram brokoli"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text10"
            android:paddingLeft="15dp"
            android:text="- 100 gram daging ayam "
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text11"
            android:paddingLeft="15dp"
            android:text="- 2 siung bawang putih"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text12"
            android:paddingLeft="15dp"
            android:text="- 1 sendok makan saus tiram"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text13"
            android:paddingLeft="15dp"
            android:text="- 1 sendok makan kecap manis"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text14"
            android:paddingLeft="15dp"
            android:text="- Garam dan merica secukupnya"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text15"
            android:paddingLeft="15dp"
            android:text="- Minyak sayur untuk menumis"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/dcapcay_text17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text16"
            android:layout_marginLeft="250dp"
            android:text="Kalori 149"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/dcapcay_text18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text17"
            android:layout_marginLeft="250dp"
            android:text="Karbohidrat 23.7g"
            />

        <TextView
            android:id="@+id/dcapcay_text19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text18"
            android:layout_marginLeft="250dp"
            android:text="Lemak 5.59g"
            />

        <TextView
            android:id="@+id/dcapcay_text20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcapcay_text19"
            android:layout_marginLeft="250dp"
            android:text="Protein 3.92g"
            />
    </RelativeLayout>

</ScrollView>