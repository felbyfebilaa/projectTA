<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lunch"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lc_txt1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="LUNCH"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/pink"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/lc_gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lc_txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/capcay"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/lc_txt2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lc_gambar1"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="CAPCAY"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/lc_gambar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lc_txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/sayurasem"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/lc_txt3"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lc_gambar2"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="SAYUR ASEM"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/lc_gambar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lc_txt3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/steak"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/lc_txt4"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lc_gambar3"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="CHICKEN STEAK"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/lc_gambar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lc_txt4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/steaktempe"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/lc_txt5"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lc_gambar4"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="STEAK TEMPE"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

    </RelativeLayout>

</ScrollView>